<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="opetbrothers.com.encontrefacil.Activity.LoginActivity">

    <ImageButton
        android:id="@+id/imageButton6"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:background="#00ff0000"
        android:onClick="ClickButtonPessoaJuridica"
        app:srcCompat="@drawable/botaopessoajuridica"
        android:layout_marginTop="14dp"
        android:layout_below="@+id/imageButton5"
        android:layout_alignStart="@+id/imageButton5" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/imageView3"
        android:layout_marginTop="20dp"
        android:text="Quem é você?"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Widget.TextView.SpinnerItem"
        android:textSize="30sp" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="11dp"
        app:srcCompat="@drawable/logo" />

    <ImageButton
        android:id="@+id/imageButton5"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:background="#00ff0000"
        android:onClick="ClickButtonPessoaFisica"
        app:srcCompat="@drawable/botaopessofisica"
        android:layout_marginTop="34dp"
        android:layout_below="@+id/textView9"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
