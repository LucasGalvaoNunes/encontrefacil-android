<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="opetbrothers.com.encontrefacil.Activity.MainPessoaJuridicaActivity"
    tools:showIn="@layout/app_bar_main_pessoa_juridica">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="casual"
            android:gravity="center"
            android:text="Produtos em destaque!"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textSize="20sp" />
    </LinearLayout>

    <ListView
        android:id="@+id/listProdutosMainPessoaJuridica"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


</LinearLayout>
